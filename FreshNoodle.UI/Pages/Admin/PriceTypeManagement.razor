@page "/admin/price-types"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject CustomerApiService CustomerService

<PageTitle>Price Type Management - FreshNoodle</PageTitle>

<div class="container mt-5">
    <h2>Price Type Management</h2>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-3">@successMessage</div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }

    <div class="card mb-4 mt-4">
        <div class="card-header bg-dark text-white">
            <h4>@(editingType.Id == 0 ? "Create New Price Type" : $"Edit Type: {editingType.Name}")</h4>
        </div>
        <div class="card-body">
            <div class="row g-3 text-start">
                <div class="col-md-4">
                    <label class="form-label">Type Name</label>
                    <input type="text" class="form-control" placeholder="e.g. Standard, Premium, Bulk" @bind="editingType.Name" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Default Price / Kg</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" @bind="editingType.DefaultPricePerKg" />
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="priceActive" @bind="editingType.IsActive" />
                        <label class="form-check-label" for="priceActive">Active</label>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2 text-start">
                    @if (editingType.Id == 0)
                    {
                        <button class="btn btn-success w-100" @onclick="SaveType" disabled="@isLoading">Create</button>
                    }
                    else
                    {
                        <button class="btn btn-primary w-100" @onclick="SaveType" disabled="@isLoading">Update</button>
                        <button class="btn btn-secondary w-100" @onclick="CancelEdit">Cancel</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Existing Price Types</h4>
            <button class="btn btn-sm btn-outline-secondary" @onclick="LoadTypes">Refresh</button>
        </div>
        <div class="card-body p-0">
            @if (priceTypes == null)
            {
                <div class="p-4 text-center"><p>Loading price types...</p></div>
            }
            else if (!priceTypes.Any())
            {
                <div class="p-4 text-center text-muted"><p>No price types found.</p></div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">Name</th>
                            <th>Default Price / Kg</th>
                            <th>Status</th>
                            <th class="text-end px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in priceTypes)
                        {
                            <tr>
                                <td class="px-4"><strong>@type.Name</strong></td>
                                <td>@type.DefaultPricePerKg.ToString("C2")</td>
                                <td>
                                    <span class="badge @(type.IsActive ? "bg-success" : "bg-danger")">
                                        @(type.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-end px-4">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditType(type)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private List<PriceTypeViewModel>? priceTypes;
    private PriceTypeViewModel editingType = new();
    private bool isLoading = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTypes();
    }

    private async Task LoadTypes()
    {
        priceTypes = await CustomerService.GetPriceTypesAsync();
    }

    private void EditType(PriceTypeViewModel type)
    {
        editingType = new PriceTypeViewModel
        {
            Id = type.Id,
            Name = type.Name,
            DefaultPricePerKg = type.DefaultPricePerKg,
            IsActive = type.IsActive
        };
        successMessage = string.Empty;
        errorMessage = string.Empty;
    }

    private void CancelEdit()
    {
        editingType = new PriceTypeViewModel();
        successMessage = string.Empty;
        errorMessage = string.Empty;
    }

    private async Task SaveType()
    {
        if (string.IsNullOrEmpty(editingType.Name))
        {
            errorMessage = "Price type name is required.";
            return;
        }

        isLoading = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        AuthResponseModel result;
        if (editingType.Id == 0)
        {
            result = await CustomerService.CreatePriceTypeAsync(editingType);
        }
        else
        {
            result = await CustomerService.UpdatePriceTypeAsync(editingType.Id, editingType);
        }

        if (result.Success)
        {
            successMessage = editingType.Id == 0 ? "Price type created successfully." : "Price type updated successfully.";
            editingType = new();
            await LoadTypes();
        }
        else
        {
            errorMessage = result.Message;
        }

        isLoading = false;
    }
}

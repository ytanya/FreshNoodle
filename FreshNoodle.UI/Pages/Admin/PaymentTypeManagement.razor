@page "/admin/payment-types"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject CustomerApiService CustomerService

<PageTitle>Payment Type Management - FreshNoodle</PageTitle>

<div class="container mt-5">
    <h2>Payment Type Management</h2>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-3">@successMessage</div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }

    <div class="card mb-4 mt-4">
        <div class="card-header bg-dark text-white">
            <h4>@(editingType.Id == 0 ? "Create New Payment Type" : $"Edit Type: {editingType.Name}")</h4>
        </div>
        <div class="card-body">
            <div class="row g-3 text-start">
                <div class="col-md-4">
                    <label class="form-label">Payment Name</label>
                    <input type="text" class="form-control" placeholder="e.g. Cash, Bank Transfer, Credit Card" @bind="editingType.Name" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" placeholder="Optional description" @bind="editingType.Description" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="paymentActive" @bind="editingType.IsActive" />
                        <label class="form-check-label" for="paymentActive">Active</label>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2 text-start">
                    @if (editingType.Id == 0)
                    {
                        <button class="btn btn-success w-100" @onclick="SaveType" disabled="@isLoading">Create</button>
                    }
                    else
                    {
                        <button class="btn btn-primary w-100" @onclick="SaveType" disabled="@isLoading">Update</button>
                        <button class="btn btn-secondary w-100" @onclick="CancelEdit">Cancel</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Existing Payment Types</h4>
            <button class="btn btn-sm btn-outline-secondary" @onclick="LoadTypes">Refresh</button>
        </div>
        <div class="card-body p-0">
            @if (paymentTypes == null)
            {
                <div class="p-4 text-center"><p>Loading payment types...</p></div>
            }
            else if (!paymentTypes.Any())
            {
                <div class="p-4 text-center text-muted"><p>No payment types found.</p></div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th class="text-end px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in paymentTypes)
                        {
                            <tr>
                                <td class="px-4"><strong>@type.Name</strong></td>
                                <td>@type.Description</td>
                                <td>
                                    <span class="badge @(type.IsActive ? "bg-success" : "bg-danger")">
                                        @(type.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-end px-4">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditType(type)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private List<PaymentTypeViewModel>? paymentTypes;
    private PaymentTypeViewModel editingType = new();
    private bool isLoading = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTypes();
    }

    private async Task LoadTypes()
    {
        paymentTypes = await CustomerService.GetPaymentTypesAsync();
    }

    private void EditType(PaymentTypeViewModel type)
    {
        editingType = new PaymentTypeViewModel
        {
            Id = type.Id,
            Name = type.Name,
            Description = type.Description,
            IsActive = type.IsActive
        };
        successMessage = string.Empty;
        errorMessage = string.Empty;
    }

    private void CancelEdit()
    {
        editingType = new PaymentTypeViewModel();
        successMessage = string.Empty;
        errorMessage = string.Empty;
    }

    private async Task SaveType()
    {
        if (string.IsNullOrEmpty(editingType.Name))
        {
            errorMessage = "Payment type name is required.";
            return;
        }

        isLoading = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        AuthResponseModel result;
        if (editingType.Id == 0)
        {
            result = await CustomerService.CreatePaymentTypeAsync(editingType);
        }
        else
        {
            result = await CustomerService.UpdatePaymentTypeAsync(editingType.Id, editingType);
        }

        if (result.Success)
        {
            successMessage = editingType.Id == 0 ? "Payment type created successfully." : "Payment type updated successfully.";
            editingType = new();
            await LoadTypes();
        }
        else
        {
            errorMessage = result.Message;
        }

        isLoading = false;
    }
}

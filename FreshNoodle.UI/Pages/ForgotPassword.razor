@page "/forgot-password"
@using FreshNoodle.UI.Services
@using FreshNoodle.UI.Models
@inject AuthApiService AuthService
@inject NavigationManager Navigation

<PageTitle>Forgot Password - FreshNoodle</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Forgot Password</h3>
                </div>
                <div class="card-body">
                    @if (step == 1)
                    {
                        <p>Enter your email address and we'll send you a 6-digit verification code.</p>
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" id="email" class="form-control" @bind="email" />
                        </div>

                        <button class="btn btn-primary w-100" @onclick="HandleRequestCode" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span> <span>Sending...</span>
                            }
                            else
                            {
                                <span>Send Verification Code</span>
                            }
                        </button>
                    }
                    else if (step == 2)
                    {
                        <p>A verification code has been sent to <strong>@email</strong>. Please enter the 6-digit code below.</p>
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="mb-3">
                            <label for="code" class="form-label">Verification Code</label>
                            <input type="text" id="code" class="form-control text-center fs-4 fw-bold" maxlength="6" @bind="verificationCode" placeholder="000000" />
                        </div>

                        <button class="btn btn-primary w-100" @onclick="HandleVerifyCode" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span> <span>Verifying...</span>
                            }
                            else
                            {
                                <span>Verify Code</span>
                            }
                        </button>
                        <button class="btn btn-link w-100 mt-2" @onclick="() => step = 1">Back to Email</button>
                    }
                    else if (step == 3)
                    {
                        <p>Code verified! Now set your new password.</p>
                        
                        <EditForm Model="@resetModel" OnValidSubmit="HandleResetPassword">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <div class="input-group">
                                    <InputText id="newPassword" type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="resetModel.NewPassword" />
                                    <button class="btn btn-outline-secondary" type="button" @onclick="() => showPassword = !showPassword">
                                        <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => resetModel.NewPassword)" />
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="resetModel.ConfirmPassword" />
                                <ValidationMessage For="@(() => resetModel.ConfirmPassword)" />
                            </div>

                            <button type="submit" class="btn btn-success w-100" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span> <span>Resetting...</span>
                                }
                                else
                                {
                                    <span>Reset Password</span>
                                }
                            </button>
                        </EditForm>
                    }
                    else if (step == 4)
                    {
                        <div class="text-center py-4">
                            <div class="text-success mb-3">
                                <i class="bi bi-check-circle-fill fs-1"></i>
                            </div>
                            <h4>Password Reset Successful!</h4>
                            <p>You can now login with your new password.</p>
                            <a href="/login" class="btn btn-primary mt-3">Go to Login</a>
                        </div>
                    }

                    @if (step < 4)
                    {
                        <div class="mt-4 text-center border-top pt-3">
                            <a href="/login" class="text-decoration-none">Back to Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int step = 1;
    private string email = string.Empty;
    private string verificationCode = string.Empty;
    private ResetPasswordViewModel resetModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private bool showPassword = false;

    private async Task HandleRequestCode()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Email is required.";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;

        var success = await AuthService.ForgotPasswordAsync(email);
        if (success)
        {
            step = 2;
        }
        else
        {
            errorMessage = "Failed to send verification code. Please try again.";
        }

        isLoading = false;
    }

    private async Task HandleVerifyCode()
    {
        if (string.IsNullOrWhiteSpace(verificationCode))
        {
            errorMessage = "Code is required.";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;

        var success = await AuthService.VerifyResetCodeAsync(email, verificationCode);
        if (success)
        {
            resetModel.Email = email;
            resetModel.VerificationCode = verificationCode;
            step = 3;
        }
        else
        {
            errorMessage = "Invalid or expired verification code.";
        }

        isLoading = false;
    }

    private async Task HandleResetPassword()
    {
        isLoading = true;
        errorMessage = string.Empty;

        var result = await AuthService.ResetPasswordWithCodeAsync(resetModel);
        if (result.Success)
        {
            step = 4;
        }
        else
        {
            errorMessage = result.Message;
        }

        isLoading = false;
    }
}

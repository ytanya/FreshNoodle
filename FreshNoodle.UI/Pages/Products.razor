@page "/products"
@using FreshNoodle.UI.Models
@using FreshNoodle.UI.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject ProductApiService ProductService
@inject NavigationManager Navigation

<PageTitle>Products - FreshNoodle</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Products</h2>
                <AuthorizeView Roles="Admin,Manager">
                    <button class="btn btn-success" @onclick="ShowCreateForm">Add New Product</button>
                </AuthorizeView>
            </div>


            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            @if (showForm)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h4>@(editingProduct != null ? "Edit Product" : "New Product")</h4>
                    </div>
                    <div class="card-body">
                        <EditForm Model="@productModel" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <InputText id="name" class="form-control" @bind-Value="productModel.Name" />
                                <ValidationMessage For="@(() => productModel.Name)" />
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <InputNumber id="price" class="form-control" @bind-Value="productModel.Price" />
                                <ValidationMessage For="@(() => productModel.Price)" />
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <InputTextArea id="description" class="form-control" rows="3" @bind-Value="productModel.Description" />
                            </div>

                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span>Saving...</span>
                                }
                                else
                                {
                                    <span>@(editingProduct != null ? "Update" : "Create")</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                        </EditForm>
                    </div>
                </div>
            }

            @if (products == null)
            {
                <p>Loading products...</p>
            }
            else if (products.Count == 0)
            {
                <p>No products found. Create your first product above.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>$@product.Price.ToString("F2")</td>
                                <td>@product.Description</td>
                                <td>@product.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <AuthorizeView Roles="Admin,Manager">
                                        <button class="btn btn-sm btn-primary" @onclick="() => EditProduct(product)">Edit</button>
                                    </AuthorizeView>
                                    <AuthorizeView Roles="Admin">
                                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                                    </AuthorizeView>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private List<ProductViewModel>? products;
    private ProductViewModel productModel = new();
    private ProductViewModel? editingProduct = null;
    private bool showForm = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        products = await ProductService.GetAllProductsAsync();
    }

    private void ShowCreateForm()
    {
        productModel = new ProductViewModel();
        editingProduct = null;
        showForm = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;
    }

    private void EditProduct(ProductViewModel product)
    {
        productModel = new ProductViewModel
        {
            Id = product.Id,
            Name = product.Name,
            Price = product.Price,
            Description = product.Description
        };
        editingProduct = product;
        showForm = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;
    }

    private void CancelForm()
    {
        showForm = false;
        productModel = new();
        editingProduct = null;
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        bool success;

        if (editingProduct != null)
        {
            success = await ProductService.UpdateProductAsync(productModel.Id, productModel);
            successMessage = success ? "Product updated successfully!" : "";
        }
        else
        {
            success = await ProductService.CreateProductAsync(productModel);
            successMessage = success ? "Product created successfully!" : "";
        }

        if (success)
        {
            await LoadProducts();
            CancelForm();
        }
        else
        {
            errorMessage = "Failed to save product. Please try again.";
        }

        isLoading = false;
    }

    private async Task DeleteProduct(int id)
    {
        if (confirm("Are you sure you want to delete this product?"))
        {
            var success = await ProductService.DeleteProductAsync(id);

            if (success)
            {
                successMessage = "Product deleted successfully!";
                await LoadProducts();
            }
            else
            {
                errorMessage = "Failed to delete product.";
            }
        }
    }

    private bool confirm(string message)
    {
        // In a real app, use JSInterop for confirmation dialog
        return true;
    }
}
